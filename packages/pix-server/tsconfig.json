{
  "compilerOptions": {
    "target": "esnext",                                
    "module": "commonjs",                           
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "./src/@types"
    ]
  },
  "includes": ["src/**/**", "__tests__/**/**"],
  "exclude": ["node_modules/**/**"]
}
